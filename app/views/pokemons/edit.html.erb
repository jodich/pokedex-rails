<h1>Edit article</h1>

<%= form_with(model: @pokemon, local: true) do |form| %>

  <p>
    <%= form.label :num %><br>
    <%= form.text_field :num %>
  </p>

  <p>
    <%= form.label :name %><br>
    <%= form.text_area :name %>
  </p>

  <p>
    <%= form.label :img %><br>
    <%= form.text_area :img %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>